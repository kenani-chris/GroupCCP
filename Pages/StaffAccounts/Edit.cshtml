@page
@model GroupCCP.Pages.StaffAccounts.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>StaffAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StaffAccount.AccountId" />
            <div class="form-group">
                <label asp-for="StaffAccount.ApplicationUserId" class="control-label"></label>
                <select asp-for="StaffAccount.ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"></select>
                <span asp-validation-for="StaffAccount.ApplicationUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffAccount.CompanyId" class="control-label"></label>
                <select asp-for="StaffAccount.CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                <span asp-validation-for="StaffAccount.CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="StaffAccount.IsActive" /> @Html.DisplayNameFor(model => model.StaffAccount.IsActive)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="StaffAccount.IsSuperUser" /> @Html.DisplayNameFor(model => model.StaffAccount.IsSuperUser)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="StaffAccount.CreateDate" class="control-label"></label>
                <input asp-for="StaffAccount.CreateDate" class="form-control" />
                <span asp-validation-for="StaffAccount.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
