@page
@model GroupCCP.Pages.site.Admin.Correctives.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_SystemLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ComplaintCorrectiveInfo[0].Log)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComplaintCorrectiveInfo[0].RouteCause)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComplaintCorrectiveInfo[0].CorrectiveAction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComplaintCorrectiveInfo[0].StaffAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComplaintCorrectiveInfo[0].CorrectiveInfoDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ComplaintCorrectiveInfo) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Log.LogId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RouteCause)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorrectiveAction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffAccount.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorrectiveInfoDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CorrectiveId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CorrectiveId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CorrectiveId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
