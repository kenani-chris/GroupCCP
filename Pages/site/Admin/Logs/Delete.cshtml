@page
@model GroupCCP.Pages.site.Admin.Logs.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_SystemLayout.cshtml";
}


@{
    ViewData["Title"] = "Edit";
    Layout = "/Pages/Shared/_SystemLayout.cshtml";
}

<section class="content-header container-fluid">
    <div class="container-fluid row">
        <div class="col-md-6">
            <h1 class="m-0 text-dark">@Model.PageTitle</h1>
        </div>
        <div class="col-md-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a asp-page="/site/Index" asp-route-CompanyId="@Model.Company.CompanyId">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-page="/site/Admin/Index" asp-route-CompanyId="@Model.Company.CompanyId">Admin</a></li>
                <li class="breadcrumb-item"><a asp-page="/site/Admin/Logs/Index" asp-route-CompanyId="@Model.Company.CompanyId" >Logs</a></li>
                <li class="breadcrumb-item"><a asp-page="./Details" asp-route-CompanyId="@Model.Company.CompanyId" asp-route-LogId="@Model.ComplaintLogDetail.LogId">Log @Model.ComplaintLogDetail.LogId</a></li>
                <li class="breadcrumb-item">Delete</li>
            </ol>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        @if (!Model.StaffHasPerm)
        {
            <div class="card card-warning container-fluid">
                <div class="card-header">
                    Denied Access
                </div>
                <div class="card-body">
                    It appears you do not have permission to this page
                    <table class="table table-bordered">
                        <tr>
                            <th>Permission Entity</th>
                            <td>@Model.PermissionEntity</td>
                        </tr>
                        <tr>
                            <th>Permission Required</th>
                            <td>@Model.PermissionRequired</td>
                        </tr>
                    </table>
                    You may need to contact respective admin to add the permission to your role
                </div>
            </div>
        }
        else
        {
            <div class="card container-fluid">
                <div class="card-header">
                    <h4 class="float-left">Log @Model.ComplaintLogDetail.LogId</h4>
                </div>
                <div class="card-body">


                    <h3>Are you sure you want to delete this Log?</h3>
                    <a asp-page="./Edit" asp-route-CompanyId="@Model.Company.CompanyId" asp-route-LogId="@Model.ComplaintLogDetail.LogId"><div class="nav-link float-right btn btn-info  text-white">Edit Instead</div></a>   
                    <div>
                        <h4>ComplaintLogDetail</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ComplaintLogDetail.Customers)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ComplaintLogDetail.Customers.Customer)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ComplaintLogDetail.CustomerComplaint)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ComplaintLogDetail.CustomerComplaint)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ComplaintLogDetail.CustomerRequest)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ComplaintLogDetail.CustomerRequest)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ComplaintLogDetail.Means)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ComplaintLogDetail.Means.Means)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ComplaintLogDetail.Level)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ComplaintLogDetail.Level.LevelName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ComplaintLogDetail.Status)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ComplaintLogDetail.Status.Status)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ComplaintLogDetail.StaffAccount)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ComplaintLogDetail.StaffAccount.User.Email)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ComplaintLogDetail.Priority)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ComplaintLogDetail.Priority.PriorityId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ComplaintLogDetail.StatusSubmitDate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ComplaintLogDetail.StatusSubmitDate)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ComplaintLogDetail.StatusClosedDate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ComplaintLogDetail.StatusClosedDate)
                            </dd>
                        </dl>
    
                        <form method="post">
                            <input type="hidden" asp-for="ComplaintLogDetail.LogId" />
                            <div class="card-footer">
                                <div class="float-right" style="margin:5px">
                                    <input type="submit" value="Delete Log" class="btn btn-sm btn-danger py-0" />
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        }
    </div>
</section>