@page
@model GroupCCP.Pages.site.Admin.Companies.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_SystemLayout.cshtml";
}

<h1>Create</h1>

<h4>Company</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Company.CompanyName" class="control-label"></label>
                <input asp-for="Company.CompanyName" class="form-control" />
                <span asp-validation-for="Company.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.CompanyNameAbbreviation" class="control-label"></label>
                <input asp-for="Company.CompanyNameAbbreviation" class="form-control" />
                <span asp-validation-for="Company.CompanyNameAbbreviation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.CompanyCreateDate" class="control-label"></label>
                <input asp-for="Company.CompanyCreateDate" class="form-control" />
                <span asp-validation-for="Company.CompanyCreateDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Company.CompanyActive" /> @Html.DisplayNameFor(model => model.Company.CompanyActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Company.GroupId" class="control-label"></label>
                <select asp-for="Company.GroupId" class ="form-control" asp-items="ViewBag.GroupId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
