@page
@model GroupCCP.Pages.site.IndexModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["PageTitle"] = "Dashboard";
    Layout = "/Pages/Shared/_SystemLayout.cshtml";

    ViewData["MyLogs"] = Model.MyAssignedLogs.Count();
    ViewData["ResolvedLogs"] = Model.MyResolvedLogs.Count();
    ViewData["WIPLogs"] = Model.MyWIPLogs.Count();
    ViewData["UnAttendedLogs"] = Model.MyUnAttendedLogs.Count();

    ViewData["Day1"] = Model.WeekResults[1];
    ViewData["Day2"] = Model.WeekResults[2];
    ViewData["Day3"] = Model.WeekResults[3];
    ViewData["Day4"] = Model.WeekResults[4];
    ViewData["Day5"] = Model.WeekResults[5];
    ViewData["Day6"] = Model.WeekResults[6];
    ViewData["Day7"] = Model.WeekResults[7];

    
}
 <section class="content-header container-fluid">
    <div class="container-fluid row">
        <div class="col-md-6">
            <h1 class="m-0 text-dark">@ViewData["PageTitle"]</h1>
        </div>
        <div class="col-md-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a asp-page="/site/Index" asp-route-CompanyId="@Model.Company.CompanyId">Dashboard</a></li>
            </ol>
        </div>
    </div>
</section>
@if (!Model.StaffHasPerm)
{
    <div style="margin-bottom: 10px; width: 100%">
        <partial name="./Errors/permission.cshtml" />
    </div>
}
else
{
    <div class="container-fluid row">
        <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
            <div class="inner">
            <h3>@Model.MyAssignedLogs.Count</h3>
            <p>My Logs</p>
            </div>
            <div class="icon">
            <i class="ion ion-bag"></i>
            </div>
        </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
            <div class="inner">
            <h3>@Model.MyResolvedLogs.Count</h3>

            <p>Resolved Logs</p>
            </div>
            <div class="icon">
            <i class="ion ion-stats-bars"></i>
            </div>
        </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning">
            <div class="inner">
            <h3>@Model.MyWIPLogs.Count</h3>

            <p>Work In Progress</p>
            </div>
            <div class="icon">
            <i class="ion ion-person-add"></i>
            </div>
        </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
            <h3>@Model.MyUnAttendedLogs.Count</h3>

            <p>Unattended</p>
            </div>
            <div class="icon">
            <i class="ion ion-pie-graph"></i>
            </div>
        </div>
        </div>
        <!-- ./col -->
    </div>
    <div class="container-fluid row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header border-0">
                <div class="d-flex justify-content-between">
                </div>
                </div>
                <div class="card-body">
                <div class="d-flex">
                    <p class="d-flex flex-column">
                    <span class="text-bold text-lg">0</span>
                    <span>Complaints Over Time</span>
                    </p>
                    <p class="ml-auto d-flex flex-column text-right">
                    <span class="text-success">
                        <i class="fas fa-arrow-up"></i> 0%
                    </span>
                    <span class="text-muted">Since last week</span>
                    </p>
                </div>
                <!-- /.d-flex -->

                <div class="position-relative mb-4">
                    <canvas id="myChart" height="100"></canvas>
                </div>

                
                </div>
            </div>
        <!-- /.card -->
        </div>
        <!-- /.col-md-6 -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header border-0">
                <div class="d-flex justify-content-between">
                </div>
                </div>
                <div class="card-body">

                    <div class="position-relative mb-4">
                        <canvas id="myChart2" height="10"></canvas>
                    </div>
                </div>
            </div>
            <!-- /.card -->

        </div>
        <!-- /.col-md-6 -->
    </div>
} 