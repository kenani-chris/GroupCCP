@page
@model GroupCCP.Pages.RoleAssignments.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleAssignment[0].Staff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleAssignment[0].Roles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.RoleAssignment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Staff.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roles.RoleId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RoleAssignmentId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.RoleAssignmentId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.RoleAssignmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
