@page
@model GroupCCP.Pages.ComplaintFollowUps.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ComplaintFollowUp[0].Log)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComplaintFollowUp[0].Staff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComplaintFollowUp[0].FollowUpCalls)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComplaintFollowUp[0].FollowUpDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComplaintFollowUp[0].FollowUpFeedback)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ComplaintFollowUp) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Log.LogId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staff.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FollowUpCalls.FollowUpId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FollowUpDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FollowUpFeedback)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FollowUpId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.FollowUpId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.FollowUpId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
