@model GroupCCP.Pages.PermissionAssignments.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PermissionAssignment[0].Roles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PermissionAssignment[0].Permissions)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PermissionAssignment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Roles.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Permissions.PermissionEntity)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AssignmentId">Edit</a> |
