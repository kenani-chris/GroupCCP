@page
@model GroupCCP.Pages.LevelMemberships.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LevelMembership[0].Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LevelMembership[0].Staff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LevelMembership[0].MembershipRole)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LevelMembership[0].MembershipActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LevelMembership) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Level.LevelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staff.AccountId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipRole)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipActive)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MembershipId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.MembershipId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.MembershipId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
